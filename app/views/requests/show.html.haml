- model_class = Request
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @request.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @request.last_name
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @request.email
%p
  %strong= model_class.human_attribute_name(:mobile) + ':'
  %br
  = @request.mobile
%p
  %strong= model_class.human_attribute_name(:address_one) + ':'
  %br
  = @request.address_one
%p
  %strong= model_class.human_attribute_name(:address_two) + ':'
  %br
  = @request.address_two
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @request.state
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @request.city
%p
  %strong= model_class.human_attribute_name(:pin) + ':'
  %br
  = @request.pin
%p
  %strong= model_class.human_attribute_name(:accept_flag) + ':'
  %br
  = @request.accept_flag


= link_to t('.back', :default => t("helpers.links.back")), requests_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_request_path(@request), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), request_path(@request), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
